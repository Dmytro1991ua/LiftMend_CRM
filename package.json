{
  "name": "lift-mend-crm",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint-fix": "npm run lint -- --fix",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "check-all": "npm run lint && npm run lint-fix && npm run type-check && npm run format && npm run format-check",
    "codegen-server": "graphql-codegen --config graphql/codegen/server-codegen.yaml",
    "codegen-client": "graphql-codegen --config graphql/codegen/client-codegen.yml",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "test:coverage": "jest --coverage --no-watch",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "pre-push": "npm run test:ci"
  },
  "dependencies": {
    "@apollo/client": "^3.8.8",
    "@apollo/server": "^4.9.5",
    "@as-integrations/next": "^3.0.0",
    "@prisma/client": "^5.7.1",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@tanstack/react-table": "^8.15.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "date-fns": "^3.6.0",
    "graphql": "^16.8.1",
    "graphql-tag": "^2.12.6",
    "lucide-react": "^0.364.0",
    "next": "^12.3.1",
    "postcss-nesting": "^12.0.2",
    "react": "^17.0.2",
    "react-day-picker": "^8.10.0",
    "react-dom": "^17.0.2",
    "react-icons": "^5.0.1",
    "react-infinite-scroll-component": "^6.1.0",
    "react-loader-spinner": "^6.1.6",
    "tailwind-merge": "^2.2.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/client-preset": "4.1.0",
    "@graphql-codegen/fragment-matcher": "^5.0.0",
    "@graphql-codegen/introspection": "4.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "autoprefixer": "^10.0.1",
    "eslint": "^7.32.0",
    "eslint-config-next": "^12.3.1",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.32.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^13.0.3",
    "postcss": "^8",
    "prettier": "^2.8.3",
    "prisma": "^5.7.1",
    "tailwindcss": "^3.3.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "npm run check-all"
    ],
    "*.{html,md,mdx}": [
      "npm run format-check",
      "npm run format"
    ]
  }
}
